# Maintainer: Favilances

pkgname=capsaicin
pkgver=0.1
pkgrel=1
pkgdesc="Fast intelligent web directory scanner"
arch=('x86_64')
url="https://github.com/abdulhalimaltuntas/capsaicin"
license=('MIT')
depends=()
makedepends=('git' 'go')

source=("capsaicin::git+https://github.com/abdulhalimaltuntas/capsaicin.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/capsaicin"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/capsaicin"
  go build -o capsaicin ./cmd/capsaicin
}

package() {
  cd "$srcdir/capsaicin"
  install -Dm755 capsaicin "$pkgdir/usr/bin/capsaicin"
}
